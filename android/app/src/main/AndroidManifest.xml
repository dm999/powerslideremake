<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.powerslide.remake"
    android:versionCode="1"
    android:versionName="1.18" 
	android:installLocation="auto">

    <uses-sdk android:minSdkVersion="16" /> 
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:label="Powerslide Remake" android:icon="@drawable/ic_launcher"  android:hasCode="true">
        <activity android:name="com.powerslide.remake.MainActivity" 
                  android:label="Powerslide Remake"
                  android:configChanges="orientation|screenSize|keyboardHidden"
		  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
          android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> 
    </application>

</manifest>
